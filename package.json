{
  "name": "leaflet-regular-grid-cluster",
  "version": "0.0.1",
  "description": "clustering elements base on the define grid",
  "main": "dist/leaflet-regulargridcluster.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adammertel/Leaflet.RegularGridCluster.git"
  },
  "keywords": [
    "leaflet",
    "grid",
    "cluster"
  ],
  "author": "Adam Mertel, University of Vienna",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/adammertel/Leaflet.RegularGridCluster/issues"
  },
  "homepage": "https://github.com/adammertel/Leaflet.RegularGridCluster#readme",
  "devDependencies": {
    "babel-cli": "^6.23.0",
    "babel-preset-env": "^1.2.1",
    "bower": "^1.8.0",
    "copyfiles": "^1.0.0",
    "jshint": "^2.9.3",
    "leaflet": "*",
    "parallelshell": "^2.0.0",
    "uglify-js": "github:mishoo/UglifyJS2#harmony"
  },
  "scripts": {
    "jshint": "jshint src",
    
    "babel": "babel src --out-file dist/leaflet-regulargridcluster.src.js",
    "concat-js": "uglifyjs dist/leaflet-regulargridcluster.src.js -o dist/leaflet-regulargridcluster.src.js -b --preamble \" /* Adam Mertel|UNIVIE */ \" --wrap ",
    "minify-js": "uglifyjs dist/leaflet-regulargridcluster.src.js -o dist/leaflet-regulargridcluster.js -c -m --preamble \" /* Adam Mertel|UNIVIE */ \" --wrap ",
    
    "onchange-js": "onchange src/**/*.js -- npm run build",
    "onchange-css": "onchange src/**/*.css -- npm run move-css",
    
    "move-css": "copyfiles -f src/leaflet-regulargridcluster.css dist",
    
    "build": "parallelshell \"npm run jshint\" \"npm run babel\" \"npm run concat-js\" \"npm run minify-js\" \"npm run move-css\" ",
    "start": "parallelshell \"npm run onchange-js\" \"npm run build\" "
  }
}
